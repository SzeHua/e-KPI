<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.user.e_kpiv3.ImageUploadActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:textAllCaps="false"
            android:id="@+id/bUpload" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:id="@+id/bCancel" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textAllCaps="false"
            android:id="@+id/bLogout"
            android:layout_alignParentTop="true"
            android:layout_gravity="right" />

        </LinearLayout>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title:"
        android:id="@+id/tvTitle"
        android:layout_below="@+id/bLogout"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/etTitle"
        android:layout_gravity="center"
        android:hint="Title"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/tvDescription"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/etTitle"
        android:layout_alignLeft="@+id/tvTitle"
        android:layout_alignStart="@+id/tvTitle"
        android:layout_weight="1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/etDescription"
        android:layout_below="@+id/tvDescription"
        android:hint="Description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Category:"
        android:id="@+id/tvCategory"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/etDescription"
        android:layout_alignLeft="@+id/etDescription"
        android:layout_alignStart="@+id/etDescription"
        android:layout_weight="1" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/sCategory"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/tvCategory"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="KPI:"
        android:id="@+id/tvKPI"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/sCategory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/sKPI"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/tvKPI"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Measures:"
        android:id="@+id/tvMeasures"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/sKPI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/tvMeasures"
                android:id="@+id/sMeasures"
                android:spinnerMode="dropdown"
                android:layout_alignBottom="@+id/bChooseFile"
                android:layout_centerHorizontal="true"
                android:layout_weight="1" />

    <ImageView
        android:layout_width="520dp"
        android:layout_height="0dp"
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_weight="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Choose File"
        android:textAllCaps="false"
        android:id="@+id/bChooseFile"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_weight="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Camera"
        android:textAllCaps="false"
        android:id="@+id/bCamera"
        android:layout_below="@id/bChooseFile"
        android:layout_gravity="center"
        android:layout_weight="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Choose document"
        android:textAllCaps="false"
        android:id="@+id/bDocument"
        android:layout_below="@id/bCamera"
        android:layout_gravity="center"
        android:layout_weight="1" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>
