<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.e_kpiv3.HomepageActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Evidence"
        android:textAllCaps="false"
        android:id="@+id/bUploadPage"
        android:onClick="OnUpload"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Uploaded Evidence"
        android:textAllCaps="false"
        android:onClick="OnView"
        android:id="@+id/bViewEvidenceList"
        android:layout_below="@+id/bUploadPage"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_above="@+id/bUploadPage"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/bUploadPage"
        android:layout_alignStart="@+id/bUploadPage"
        android:layout_alignRight="@+id/bUploadPage"
        android:layout_alignEnd="@+id/bUploadPage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textAllCaps="false"
        android:id="@+id/bLogout"
        android:onClick="OnLogout"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

</RelativeLayout>
